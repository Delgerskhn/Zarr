@model ZarNet.Models.Company
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Companies"];
}

<h1>@Localizer["Details"]</h1>

<div>
    <h4>@Localizer["Company"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CompanyId">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back to list"]</a>
</div>
